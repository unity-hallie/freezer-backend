# Environment Configuration
ENVIRONMENT=development
TEST_MODE=false

# Database Configuration
# Development: sqlite:///./freezer_app.db or postgresql://user:pass@localhost/dbname
DATABASE_URL=sqlite:///./freezer_app.db
# Test database (automatically used when ENVIRONMENT=test or TEST_MODE=true)
TEST_DATABASE_URL=sqlite:///./test_freezer_app.db
# Production: Must be PostgreSQL (e.g., postgresql://user:pass@host:port/dbname)

# Web Server Configuration (Production)
# FRONTEND_URL=https://yourdomain.com
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
# CORS_ORIGINS=https://yourdomain.com

# Authentication & Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Discord OAuth2 (Optional - leave blank to disable Discord login)
# DISCORD_CLIENT_ID=your_discord_client_id
# DISCORD_CLIENT_SECRET=your_discord_client_secret

# Email Settings (Optional - leave blank to disable email features)
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM=noreply@freezerapp.com
MAIL_FROM_NAME=Freezer App
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com
MAIL_STARTTLS=True
MAIL_SSL_TLS=False
USE_CREDENTIALS=True
VALIDATE_CERTS=True

# Test Configuration (Development Only)
MAX_TEST_USERS=5
MAX_TEST_HOUSEHOLDS=3
MAX_TEST_ITEMS=10
TEST_MAX_EXECUTION_TIME=30
TEST_TIMEOUT_WARNING=20